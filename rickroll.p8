pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
foo=1
foospeed=1
boo=5
boospeed=1
hoo=0
bar="♥"
awesome=true

// these 3 executed every frame
function _init()
	print("♥ hello world ♥")
end

function _update()
	foo=foo+foospeed
	boo=boo+boospeed
	hoo=hoo+1
	
	// this is where we check
	// if the heart hits the edges
	if foo > 127 or foo < 0 then
		foospeed=foospeed*-1
	end
	if boo > 127 or boo < 0 then
		boospeed=boospeed*-1
	end
end

function _draw()
 cls()
	print(bar,foo,boo,hoo)
end
